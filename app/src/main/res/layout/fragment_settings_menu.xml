<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pause_menu_sidebar"
        />

    <ImageButton
        android:id="@+id/ibBackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_right"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:layout_constraintStart_toEndOf="@+id/ibBackButton"
        app:layout_constraintTop_toTopOf="@+id/ibBackButton"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        style="@style/title.secondary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        >
        <Button
            android:id="@+id/bGeneral"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="General"
            android:layout_marginTop="10dp"
            style="@style/menu_button.secondary"
            />
        <Button
            android:id="@+id/bVideoAndAudio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Video &amp; Audio"
            android:layout_marginTop="10dp"
            style="@style/menu_button.primary" />
        <Button
            android:id="@+id/bLanguage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Language"
            android:layout_marginTop="10dp"
            style="@style/menu_button.primary" />
        <Button
            android:id="@+id/bAccessibility"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Acessibility"
            android:layout_marginTop="10dp"
            style="@style/menu_button.primary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>